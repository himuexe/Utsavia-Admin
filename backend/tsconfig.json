{
  "compilerOptions": {
    "target": "ES2020",                            // Output modern JS for Node.js
    "module": "commonjs",                          // CommonJS module system
    "moduleResolution": "node",                    // Node-style module resolution
    "esModuleInterop": true,                       // Allow importing ES modules in a CommonJS project
    "skipLibCheck": true,                          // Skip library type checks for faster build
    "forceConsistentCasingInFileNames": true,      // Enforce consistent casing for file imports
    "outDir": "./dist",                            // Output directory for compiled JS files
    "rootDir": "./src",                            // Root directory for your source files
    "strict": true,                                // Enable strict type checking options
    "resolveJsonModule": true                      // Allow importing JSON files
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
